{% extends 'base1.html.twig' %}

{% block body %}
    <div style="display: flex; align-items: center; justify-content: center; height: 100vh;">
        <div class="reclamation-form" style="max-width: 600px;"> {# Adjust the max-width as needed #}
            <h1>Add Reclamation</h1>
            {# Display success flash message if available #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }} {# Add the 'novalidate' attribute here #}

            {# Form fields here... #}

            <div class="form-group">
                <label>Date Reclamation</label>
                {{ form_widget(form.dateRec, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateRec) }} {# Display errors for this field #}
            </div>
            <div class="form-group">
                <label>Sujet </label>
                {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.sujet) }} {# Display errors for this field #}
            </div>
            <div class="form-group">
                <label>Contenu</label>
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contenu) }} {# Display errors for this field #}
            </div>
            <div class="form-group">
                <label>Etat</label>
                {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.etat) }} {# Display errors for this field #}
            </div>
            <br/>
            <br/>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
