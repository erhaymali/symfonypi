{% extends 'base.html.twig' %}


{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Formualire Modifier Commande</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Forms</li>
                    <li class="breadcrumb-item active">Commandes</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->


        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 0px; padding: 10px;">

                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title">Modifier Commande</h5>

                        <!-- General Form Elements -->
                        {{ form_start(f) }}
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">Nom </label>
                            <div class="col-sm-10">
                                {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-4 col-form-label">description </label>
                            <div class="col-sm-10">
                                {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-4 col-form-label">quantite</label>
                            <div class="col-sm-10">
                                {{ form_widget(f.quantite,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>








                        <div class="row mb-3">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>

                            </div>
                        </div>

                        {{ form_end(f) }}


                    </div>
                </div>
            </div>
        </div>

    </main>
{% endblock %}